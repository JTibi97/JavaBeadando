<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<DialogPane fx:controller="sample.DevicesController" xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Do you really want to delete this device?
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Brand name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="brandNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Phone Type: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneTypeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone Price: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="phonePriceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Phone Color: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneColorField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        </GridPane>
    </content>
</DialogPane>